# Environment configuration for troubleshoot-dev build
# Copy this to .env and modify as needed

# Build configuration
SHOULD_BUILD=yes
CI_BUILD=no
DISABLE_UPDATE=no

# Version information
RELEASE_VERSION=1.0.0
BUILD_SOURCEVERSION=

# Platform configuration (auto-detected if not set)
# OS_NAME=windows  # or linux, osx
# VSCODE_ARCH=x64  # or arm64, arm

# Quality setting
VSCODE_QUALITY=stable  # or insider

# Build options
SHOULD_BUILD_REH=yes
SHOULD_BUILD_REH_WEB=yes
SHOULD_BUILD_ZIP=yes
SHOULD_BUILD_EXE_SYS=yes
SHOULD_BUILD_EXE_USR=yes
SHOULD_BUILD_DEB=yes
SHOULD_BUILD_RPM=yes
SHOULD_BUILD_APPIMAGE=yes

# Microsoft upstream commit (leave empty for latest)
MS_COMMIT=

# Node.js configuration
NODE_OPTIONS=--max-old-space-size=8192
ELECTRON_SKIP_BINARY_DOWNLOAD=1
PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=1
VSCODE_SKIP_NODE_VERSION_CHECK=1