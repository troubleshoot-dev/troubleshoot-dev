# Environment variables for troubleshoot-dev build
# Copy this file to .env and adjust values as needed

# Build configuration
SHOULD_BUILD=yes
CI_BUILD=no
DISABLE_UPDATE=no

# Platform configuration (auto-detected if not set)
# OS_NAME=windows  # windows, linux, osx
# VSCODE_ARCH=x64  # x64, arm64, arm

# Version configuration
RELEASE_VERSION=1.0.0
BUILD_SOURCEVERSION=

# Remote extension host configuration
SHOULD_BUILD_REH=yes
SHOULD_BUILD_REH_WEB=yes

# VSCode quality (stable or insider)
VSCODE_QUALITY=stable

# Package build options (Linux)
SHOULD_BUILD_DEB=yes
SHOULD_BUILD_RPM=yes
SHOULD_BUILD_APPIMAGE=yes

# Package build options (Windows)
SHOULD_BUILD_ZIP=yes
SHOULD_BUILD_EXE_SYS=yes
SHOULD_BUILD_EXE_USR=yes

# Microsoft commit reference (will be auto-generated if not set)
MS_COMMIT=

# GitHub configuration
GITHUB_TOKEN=
GITHUB_ENV=